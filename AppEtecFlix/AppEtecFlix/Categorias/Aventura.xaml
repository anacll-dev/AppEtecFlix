<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEtecFlix.Categorias.Aventura"
             Title="EtecFlix - Aventura"
             BackgroundColor="#2f2f30">

    <StackLayout Orientation="Vertical">
        <Image x:Name="logo" Style="{ StaticResource LogoNaListaDePosters }" />
        <Label Text="AVENTURA" Style="{ StaticResource LabelTextVermelho}" />

        <ScrollView>
            <Grid Padding="5">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>

                <ImageButton Grid.Row="0" Grid.Column="0"
                             x:Name="btnGatoDeBotas2" Style="{ StaticResource ButtonPosters }"
                             Clicked="Btn_Open_GatodeBotas2"/>

                <ImageButton Grid.Row="0" Grid.Column="1"
                             x:Name="btnAquaman" Style="{ StaticResource ButtonPosters }"
                             Clicked="Btn_Open_Aquaman"/>

                <ImageButton Grid.Row="1" Grid.Column="0"
                             x:Name="btnAvatar" Style="{ StaticResource ButtonPosters }"
                             Clicked="Btn_Open_Avatar"/>
               
            </Grid>
            
        </ScrollView>
    </StackLayout>
</ContentPage>